<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

	<servlet>
		<servlet-name>MemoryRecordsService</servlet-name>
		<servlet-class>cn.dreamsyk.monitor.service.MemoryRecordsService</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>CPURecordsService</servlet-name>
		<servlet-class>cn.dreamsyk.monitor.service.CPURecordsService</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>MemoryRecordsService</servlet-name>
		<url-pattern>/memory/data</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>CPURecordsService</servlet-name>
		<url-pattern>/cpu/data</url-pattern>
	</servlet-mapping>



</web-app>